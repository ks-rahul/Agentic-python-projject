# Application
APP_NAME=Agentic-AI-Python
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here
API_HOST=0.0.0.0
API_PORT=8000

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/agentic_ai
DATABASE_SYNC_URL=postgresql://user:password@localhost:5432/agentic_ai

# MongoDB (for chat sessions)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=agentic_chat

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# WhatsApp Business API
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Encryption (for secure chat sessions)
ENCRYPTION_KEY=your-32-character-aes-key-here!!

# Application URL (for OAuth callbacks)
APP_URL=http://localhost:8000

# Social Auth - Google (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Social Auth - GitHub (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Social Auth - Microsoft (Optional)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Social Auth - Facebook (Optional)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
