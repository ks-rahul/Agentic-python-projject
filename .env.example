# Application
APP_NAME=Agentic-AI-Python
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here
API_HOST=0.0.0.0
API_PORT=9000

# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/agentic_ai
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/agentic_ai

# Docker PostgreSQL Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=agentic_ai
POSTGRES_PORT=5422

# MongoDB (for chat sessions)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=agentic_chat
MONGO_PORT=27027

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6499

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Optional - for Claude models)
ANTHROPIC_API_KEY=

# Pinecone Vector Store (for RAG)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=agentic-ai
PINECONE_INDEX_HOST=

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small

# RAG Settings
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200

# Code Generation
CODE_GENERATION_MODEL=gpt-4
GENERATED_CODE_PATH=./generated_code

# Document Processing Webhook (internal)
DOCUMENT_STATUS_UPDATE_WEBHOOK_URL=http://localhost:8000/api/v1/webhook/document-status-update

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Flower (Celery monitoring)
FLOWER_PORT=5555

# ============================================
# Admin UI Tools (for development)
# ============================================

# pgAdmin (PostgreSQL Admin - like phpMyAdmin)
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Mongo Express (MongoDB Admin)
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin
MONGO_EXPRESS_PORT=8081

# Redis Commander (Redis Admin)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin
REDIS_COMMANDER_PORT=8082

# WhatsApp Business API
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=logs
LOG_RETENTION_DAYS=30

# Encryption (for secure chat sessions)
ENCRYPTION_KEY=your-32-character-aes-key-here!!

# Application URL (for OAuth callbacks)
APP_URL=http://localhost:8000

# Social Auth - Google (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Social Auth - GitHub (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Social Auth - Microsoft (Optional)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Social Auth - Facebook (Optional)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Email Configuration
EMAIL_PROVIDER=smtp  # smtp, sendgrid, mailgun
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Agentic AI

# SMTP Settings (if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=

# Mailgun (if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# Push Notifications - Firebase (Optional)
FCM_SERVER_KEY=

# SMS - Twilio (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
